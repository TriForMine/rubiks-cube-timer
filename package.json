{
	"name": "rubiks-cube-timer",
	"version": "0.1.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/TriForMine/rubiks-cube-timer.git"
	},
	"scripts": {
		"dev": "bun run build:wasm:dev && bun run next dev --turbopack",
		"build": "bun run scripts/build-production.ts",
		"build:analyze": "bun run scripts/build-production.ts --analyze",
		"build:fast": "bun run scripts/build-production.ts --skip-wasm",
		"start": "bun run next start",
		"lint": "biome lint --write .",
		"lint:check": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"type-check": "bun run tsc --noEmit",
		"clean": "rm -rf .next out node_modules/.cache",
		"clean:all": "rm -rf .next out node_modules/.cache public/sw.js cube-wasm/pkg cube-wasm/target",
		"build:wasm": "cd cube-wasm && bun run build",
		"build:wasm:dev": "cd cube-wasm && bun run build",
		"setup:wasm": "bun run scripts/setup-wasm.ts",
		"setup:rust": "cargo install wasm-bindgen-cli && rustup target add wasm32-unknown-unknown"
	},
	"dependencies": {
		"@radix-ui/react-avatar": "^1.1.10",
		"@radix-ui/react-collapsible": "^1.1.11",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-dropdown-menu": "^2.1.15",
		"@radix-ui/react-menubar": "^1.1.15",
		"@radix-ui/react-navigation-menu": "^1.2.13",
		"@radix-ui/react-progress": "^1.1.7",
		"@radix-ui/react-scroll-area": "^1.2.9",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tabs": "^1.1.12",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@serwist/next": "^9.1.1",
		"@types/three": "^0.178.1",
		"chart.js": "^4.5.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"lucide-react": "^0.533.0",
		"next": "15.4.4",
		"next-themes": "^0.4.6",
		"react": "19.1.0",
		"react-chartjs-2": "^5.3.0",
		"react-dom": "19.1.0",
		"recharts": "^3.1.0",
		"serwist": "^9.1.1",
		"sonner": "^2.0.6",
		"tailwind-merge": "^3.3.1",
		"three": "^0.178.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.3",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"sharp": "^0.34.3",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.3.6",
		"typescript": "^5"
	}
}
